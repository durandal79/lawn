{
  "tables": {
    "roles_users": {
      "primary_keys": [ "user", "role" ],
      "properties": {
        "user": {
          "type": "int"
        },
        "role": {
          "type": "int"
        }
      }
    }
  },
  "trellises": {
    "resource": {
      "primary_key": "guid",
      "properties": {
        "guid": {
          "type": "guid"
        },
        "name": {
          "type": "string"
        },
        "author": {
          "type": "reference",
          "trellis": "user",
          "insert": "author",
          "readonly": true
        },
        "type": {
          "type": "string",
          "readonly": true,
          "insert": "trellis"
        },
        "created": {
          "type": "created",
          "readonly": true
        },
        "modified": {
          "type": "modified",
          "readonly": true
        }
      }
    },
    "object": {
      "properties": {
        "id": {
          "type": "int"
        },
        "name": {
          "type": "string"
        },
        "author": {
          "type": "reference",
          "trellis": "user",
          "insert": "author",
          "readonly": true
        },
        "type": {
          "type": "string",
          "readonly": true,
          "insert": "trellis"
        },
        "created": {
          "type": "created",
          "readonly": true
        },
        "modified": {
          "type": "modified",
          "readonly": true
        }
      }
    },
    "file": {
      "primary_key": "guid",
      "properties": {
        "guid": {
          "type": "guid"
        },
        "name": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "size": {
          "type": "int"
        },
        "author": {
          "type": "reference",
          "trellis": "user",
          "insert": "author"
        },
        "timestamp": {
          "type": "created"
        },
        "extension": {
          "type": "string"
        },
        "status": {
          "type": "int",
          "default": 0
        }
      }
    },
    "notification": {
      "parent": "object",
      "properties": {
        "event": {
          "type": "string"
        },
        "data": {
          "type": "text"
        },
        "targets": {
          "type": "list",
          "trellis": "notification_target"
        }
      }
    },
    "notification_target": {
      "primary_key": "id",
      "properties": {
        "id": {
          "type": "int"
        },
        "notification": {
          "type": "reference",
          "trellis": "notification"
        },
        "recipient": {
          "type": "reference",
          "trellis": "user"
        },
        "received": {
          "type": "bool",
          "default": false
        }
      }
    },
    "user": {
      "primary_key": "id",
      "properties": {
        "id": {
          "type": "int"
        },
        "name": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string",
          "private": true
        },
        "email": {
          "type": "string",
          "private": true
        },
        "created": {
          "type": "created",
          "readonly": true,
          "private": true
        },
        "modified": {
          "type": "modified",
          "readonly": true,
          "private": true
        },
        "roles": {
          "type": "list",
          "trellis": "role",
          "private": true
        },
        "online": {
          "type": "bool"
          "default": false
        },
        "facebook_id": {
          "type": "unsigned bigint",
          "private": true
        },
        "phone": {
          "type": "string",
          "private": true
        },
        "address": {
          "type": "reference",
          "trellis": "address"
        },
        "image": {
          "type": "reference",
          "trellis": "file"
        }
      }
    },
    "role": {
      "primary_key": "id",
      "properties": {
        "id": {
          "type": "int"
        },
        "name": {
          "type": "string"
        },
        "users": {
          "type": "list",
          "trellis": "user"
        }
      }
    },
    "session": {
      "primary_key": "token",
      "properties": {
        "token": {
          "type": "string"
        },
        "user": {
          "type": "reference",
          "trellis": "user"
        },
        "hostname": {
          "type": "string"
        },
        "timestamp": {
          "type": "int"
        },
        "cache": {
          "type": "int"
        },
        "session": {
          "type": "text"
        }
      }
    },
    "update_log": {
      "properties": {
        "id": {
          "type": "int"
        },
        "user": {
          "type": "reference",
          "trellis": "user"
        },
        "data": {
          "type": "text"
        },
        "trellis": {
          "type": "string"
        },
        "created": {
          "type": "created"
        },
        "modified": {
          "type": "modified"
        }
      }
    },
    "address": {
      "parent": "resource",
      "properties": {
        "country": {
          "type": "reference",
          "trellis": "country"
        },
        "province": {
          "type": "reference",
          "trellis": "province"
        },
        "city": {
          "type": "string"
        }
      }
    },
    "country": {
      "properties": {
        "id": {
          "type": "int"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "province": {
      "properties": {
        "id": {
          "type": "int"
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}